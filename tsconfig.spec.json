{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strict": true,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*", "src/*"]
      }
    },
    "include": ["src/**/*.spec.ts", "src/**/*.test.ts", "src/**/*.d.ts"]
  }
  